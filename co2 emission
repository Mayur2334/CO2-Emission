    <script>
        // --- Historical Data Chart ---
        const historicalDataCtx = document.getElementById('historicalChartCanvas').getContext('2d');
        const historicalChart = new Chart(historicalDataCtx, {
            type: 'line',
            data: {
                labels: ['1990', '2000', '2010', '2020', '2023'],
                datasets: [{
                    label: 'Global CO2 Emissions (Gigatons)',
                    data: [22, 25, 31, 36, 38],
                    backgroundColor: 'rgba(59, 130, 246, 0.2)',
                    borderColor: 'rgba(59, 130, 246, 1)',
                    borderWidth: 2,
                    pointRadius: 5,
                    pointBackgroundColor: 'rgba(59, 130, 246, 1)',
                    fill: true,
                    animation: {
                        duration: 1000,
                        easing: 'easeInOutQuad'
                    }
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Historical Global CO2 Emissions',
                    fontColor: '#f8fafc',
                    fontSize: 16
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        fontColor: '#d1d5db'
                    }
                },
                scales: {
                    xAxes: [{
                        gridLines: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        },
                        ticks: {
                            fontColor: '#d1d5db'
                        }
                    }],
                    yAxes: [{
                        gridLines: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        },
                        ticks: {
                            fontColor: '#d1d5db',
                            beginAtZero: true
                        },
                        scaleLabel: {
                            display: true,
                            labelString: 'Gigatons of CO2',
                            fontColor: '#d1d5db'
                        }
                    }]
                },
                animation: {
                    duration: 1000,
                    easing: 'easeInOutQuad'
                }
            }
        });

        // --- Real-time Data Chart (Simulated) ---
        const realtimeDataCtx = document.getElementById('realtimeChartCanvas').getContext('2d');
        let timeLabels = [];
        let emissionsData = [];
        const realtimeChart = new Chart(realtimeDataCtx, {
            type: 'line',
            data: {
                labels: timeLabels,
                datasets: [{
                    label: 'CO2 Emissions (ppm)',
                    data: emissionsData,
                    backgroundColor: 'rgba(52, 211, 153, 0.2)',
                    borderColor: 'rgba(52, 211, 153, 1)',
                    borderWidth: 2,
                    pointRadius: 0,
                    fill: true,
                     animation: {
                        duration: 1000,
                        easing: 'easeInOutQuad'
                    }
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Simulated Real-Time CO2 Emissions',
                    fontColor: '#f8fafc',
                    fontSize: 16
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        fontColor: '#d1d5db'
                    }
                },
                scales: {
                    xAxes: [{
                        gridLines: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        },
                        ticks: {
                            fontColor: '#d1d5db',
                            maxRotation: 0,
                            minRotation: 0
                        }
                    }],
                    yAxes: [{
                        gridLines: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        },
                        ticks: {
                            fontColor: '#d1d5db',
                            beginAtZero: true
                        },
                        scaleLabel: {
                            display: true,
                            labelString: 'Parts per million (ppm)',
                            fontColor: '#d1d5db'
                        }
                    }]
                },
                animation: false,
            }
        });

        // Simulate real-time data updates
        function updateRealtimeData() {
            const now = new Date();
            const time = now.toLocaleTimeString();
            const newEmissionData = 400 + Math.random() * 20;

            timeLabels.push(time);
            emissionsData.push(newEmissionData);

            if (timeLabels.length > 20) {
                timeLabels.shift();
                emissionsData.shift();
            }

            realtimeChart.data.labels = timeLabels;
            realtimeChart.data.datasets[0].data = emissionsData;
            realtimeChart.update();
        }

        setInterval(updateRealtimeData, 2000);

    </script>
